---
export interface Props {
    number: number;
    title: string;
    description: string;
    urlImg: string;
    altImg?: string;
}

const {number, title, description, urlImg, altImg = "Pasos para usar Sapaciuz"} = Astro.props;
---


<div class="w-full min-h-[352px] bg-[#FFFFFF] rounded-3xl flex gap-5">
    <div class="w-1/2 flex ">
        <span class="w-1/3 flex items-center text-[274px] text-[#F1F1F1]">{number}</span>
        <div class="flex flex-col  justify-center w-2/3 gap-3">
            <h4 class="text-[30px] text-bold">{title}</h4>
            <p class="text-[18px] text-[#767676] leading-[130%]">{description}</p>
        </div>
    </div>
    <div class="w-1/2 flex items-end justify-center">
        <img src={urlImg} alt={altImg} >
    </div>
</div>