---
export interface Props {
  urlicon?: string;
  placeholder: string;
  name?: string;
  id?: string;
  required?: boolean;
  type?: astroHTML.JSX.HTMLInputTypeAttribute;
  autocomplete?: string;
}

const {
  urlicon = 'ðŸ’Œ',
  placeholder,
  name,
  id,
  required,
  type = 'text',
  autocomplete = 'off',
} = Astro.props;
---

<div
  class="flex w-full border px-[20px] py-[15px] items-center border-white rounded-[22px] hover:border-[#9F87FF] gap-2"
>
  <label for={id} class="text-[20px] text-[#9F87FF]">
    <i class={urlicon}></i></label
  >
  <input
    class="text-[20px] text-[#9F87FF] border-transparent focus:border-transparent focus:outline-none w-full"
    type={type}
    placeholder={placeholder}
    name={name}
    id={id}
    required={required}
    autocomplete={autocomplete}
  />
</div>
