---
import FooterComponentLayout from '../components/layout/FooterComponentLayout.astro';
import HeaderComponetLayout from '../components/layout/HeaderComponetLayout.astro';
import '../styles/global.css'

export interface Props {
  title: string; // Hacemos el título obligatorio
  description?: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  {description && <meta name="description" content={description} />}
</head>
<body class="bg-[#F0F0F0] relative">
  <HeaderComponetLayout />
  
  <main class="w-full px-[10%] gap-20 flex flex-col z-30 relative">
    <slot /> 
    
  </main>
  <img src="/public/images/photos/img-fondo-footer.png" alt="IImagen de fondo pie de página" class=" absolute w-full bottom-0 z-10">
  <FooterComponentLayout />
</body>
</html>